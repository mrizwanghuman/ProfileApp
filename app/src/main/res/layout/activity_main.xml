<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.admin.profileapp.MainActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:padding="20sp"
        android:text="@string/nameMine"
        android:textColor="@color/colorWhite"
        android:textSize="30sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fromCity"
        android:textColor="@color/colorWhite"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:textSize="15sp"
        />




    <TextView
        android:layout_width="match_parent"
        android:text="@string/Skills"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:background="@color/colorAccent"
        android:textSize="20sp"
        android:textColor="@color/colorOrange"
        />
    <Button
        android:id="@+id/frontEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frontEnd"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:gravity="center"

        />
    <Button
        android:id="@+id/backEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/backEnd"
        android:background="@color/colorPrimaryDark"
        android:textColor="@color/colorWhite"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        />
    <TextView
        android:id="@+id/skillId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorOrange"
        android:textColor="@color/colorWhite"
        android:textSize="20sp"
        android:padding="10dp"

        />

    </LinearLayout>
